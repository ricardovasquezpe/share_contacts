<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <CheckBox
            android:id="@+id/contact_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_first_name"
            android:text="Aleshia "
            android:textStyle="bold"
            android:layout_toEndOf="@+id/contact_checkbox"
            android:layout_toRightOf="@+id/contact_checkbox"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_first_name"
            android:id="@+id/contact_phone"
            android:layout_marginTop="2dp"
            android:text="St. Stephens Ward, "
            android:layout_toEndOf="@+id/contact_checkbox"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>